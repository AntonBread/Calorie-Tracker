<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.quiz.QuizActivity"
    tools:ignore="RtlHardcoded">

    <NumberPicker
        android:id="@+id/quiz_age_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/quiz_NumberPicker_Large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.4" />

    <TextView
        android:id="@+id/quiz_age_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/quiz_age_unit"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@id/quiz_age_picker"
        app:layout_constraintLeft_toRightOf="@id/quiz_age_picker"
        app:layout_constraintTop_toTopOf="@id/quiz_age_picker" />

</androidx.constraintlayout.widget.ConstraintLayout>