<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    tools:context=".ui.food.fragments.FavoriteFoodFragment">

    <!-- RecyclerView with height set to wrap_content doesn't properly
         scroll all the way down. Bottom padding of 260 dp was added to compensate
         for that restriction. 160dp is the exact height of all previous views,
         100dp is the padding proper to visualize the bottom of list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/food_favorite_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:paddingBottom="260dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constrainedHeight="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.94" />

</androidx.constraintlayout.widget.ConstraintLayout>