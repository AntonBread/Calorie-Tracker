<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textView_appTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/app_name</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="ProgressBarVertical">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_vertical_calories</item>
        <item name="android:indeterminateProgressStyle">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:minWidth">6dp</item>
    </style>

    <style name="ProgressBarVerticalNutrient" parent="ProgressBarVertical">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:max">100</item>
    </style>

    <style name="ProgressBarVerticalNutrientCarbs" parent="ProgressBarVerticalNutrient">
        <item name="android:progressDrawable">@drawable/progress_vertical_carbs</item>
    </style>

    <style name="ProgressBarVerticalNutrientFat" parent="ProgressBarVerticalNutrient">
        <item name="android:progressDrawable">@drawable/progress_vertical_fat</item>
    </style>

    <style name="ProgressBarVerticalNutrientProtein" parent="ProgressBarVerticalNutrient">
        <item name="android:progressDrawable">@drawable/progress_vertical_protein</item>
    </style>

    <style name="Text_Main_Section_Title">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Text_Main_Section_Cals">
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:text">@string/main_meal_cals</item>
    </style>

    <style name="Button_Main_Add_Food">
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:stateListAnimator">@animator/btn_add_animator</item>
        <item name="android:background">@drawable/btn_add_back</item>
        <item name="android:foreground">@drawable/btn_add_fore</item>
    </style>

    <style name="ProgressBarWater">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_water</item>
        <item name="android:indeterminateProgressStyle">
            @android:drawable/progress_indeterminate_horizontal
        </item>
    </style>

    <style name="DatePickerDialog" parent="Theme.Material3.Light.Dialog">
        <item name="colorAccent">@color/orange_bright</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerDialogButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerDialogButton</item>
    </style>

    <style name="DatePickerDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/orange_bright</item>
    </style>


    <style name="FoodModeButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/food_mode_button_tint</item>
        <item name="android:textColor">@color/food_mode_button_text</item>
    </style>

    <style name="addNewFood_EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/back_text_input_dark</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:importantForAutofill">no</item>
    </style>

    <style name="addNewFood_EditText_Nutrient" parent="addNewFood_EditText">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_weight">0.33</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="quiz_NumberPicker" parent="Theme.CalorieTracker">
        <item name="android:colorControlNormal">@color/orange_bright</item>
    </style>

    <style name="quiz_NumberPicker_Large" parent="quiz_NumberPicker">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="quiz_NumberPicker_Small" parent="quiz_NumberPicker">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="quiz_RadioButton_gender">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:button">@null</item>
        <item name="android:drawableBottom">@drawable/quiz_gender_radio_button</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="QuizRadioSelectionView">
        <item name="android:background">@drawable/back_quiz_custom_radio</item>
    </style>

    <style name="Text_Quiz_Result">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
    </style>
    
    <style name="StatsTimeButton">
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/stats_time_button_text</item>
        <item name="android:backgroundTint">@color/stats_time_button_tint</item>
        <item name="android:background">@drawable/btn_stats_time_back</item>
    </style>

</resources>