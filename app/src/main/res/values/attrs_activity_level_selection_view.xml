<resources>
    <declare-styleable name="ActivityLevelSelectionView">
        <attr name="levelName" format="string" />
        <attr name="levelDescription" format="string" />
        <attr name="levelIcon" format="reference" />
        <attr name="activityLevel" format="enum">
            <enum name="very_low" value="0" />
            <enum name="low" value="1" />
            <enum name="medium" value="2" />
            <enum name="high" value="3" />
            <enum name="very_high" value="4" />
        </attr>
    </declare-styleable>
</resources>